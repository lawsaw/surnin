block options
-
    var attributes = {};
    attributes[siteOptions.modalAwesome.modalId] = options.modalId;
    attributes[siteOptions.modalAwesome.modeId] = options.mode;
    attributes['class'] = 'modalAwesome--' + options.modalId;
    options.win.anim.in = options.win.anim.in.length > 1 ? 'modalAwesome-anim-in-'+options.win.anim.in : '';
    options.win.anim.out = options.win.anim.out.length > 1 ? 'modalAwesome-anim-out-'+options.win.anim.out : '';
.modalAwesome&attributes(attributes)
    .modalAwesome-work(class= [options.work])
        .modalAwesome-win(class= ['modalAwesome-win--' + options.win.className, options.win.anim.in, options.win.anim.out])
            .modalAwesome-toolbar
                block toolbar
            .modalAwesome-content
                block content
    .modalAwesome-bg.awModalClose
mixin dropdownAwesome(options)
    -
        var newOptions = getOptions(options);
    .dropdownAwesome(class= newOptions.class)
        if block
            block


mixin dropdownAwesomeFront(options)
    -
        var newOptions = getOptions(options);
    +buttonAwesome({
        'className': 'dropdownAwesome-front',
        'classText': 'dropdownAwesome-front-value',
        'classTitle': 'dropdownAwesome-front-title',
        'contentClassName': 'dropdownAwesome-front-link',
        'theme': newOptions.theme,
        'size': newOptions.size,
        'iconBeforeClass': 'dropdownAwesome-front-icon dropdownAwesome-front-icon--before',
        'iconAfterClass': 'dropdownAwesome-front-icon dropdownAwesome-front-icon--after',
        'iconBefore': newOptions.iconBefore,
        'iconAfter': newOptions.iconAfter,
        'href': '#',
    })
        if block
            block

mixin dropdownAwesomeBack(options)
    -
        var newOptions = getOptions(options);
    .dropdownAwesome-back(class= (newOptions.theme ? 'dropdownAwesome-back--' + newOptions.theme : '') + ' ' + (newOptions.biasLeft ? 'dropdownAwesome-back--biasLeft' : '') + ' ' + (newOptions.biasRight ? 'dropdownAwesome-back--biasRight' : ''))
        - if(newOptions.list) {
        ul.dropdownAwesome-back-list
            - for(var i = 0; i < newOptions.list.length; i++) {
            li.dropdownAwesome-back-list-item
                a(href= newOptions.list[i].link).dropdownAwesome-back-list-item-link #{newOptions.list[i].title}
            -}
        -} else {
        if block
            block
        -}

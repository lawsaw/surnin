mixin timerAwesome(options)
    -
        var options = getOptions(options),
            config = [
                {
                    'side' : 'timerAwesome-item-front',
                    'data' : {
                        'data1' : {
                            'value' : options.type == 'type1' ? options.pres : options.next,
                            'rib'   : options.type == 'type1' ? 'timerAwesome-content-pres timerAwesome-content-active' : 'timerAwesome-content-next timerAwesome-content-active',
                        },
                        'data2' : {
                            'value' : options.type == 'type1' ? options.next : '',
                            'rib'   : options.type == 'type1' ? 'timerAwesome-content-next timerAwesome-content-active' : 'timerAwesome-content-next',
                        },
                        'data3' : {
                            'value' : options.pres,
                            'rib'   : 'timerAwesome-content-pres timerAwesome-content-active',
                        },
                        'data4' : {
                            'value' : options.type == 'type1' ? options.next : '',
                            'rib'   : options.type == 'type1' ? 'timerAwesome-content-next timerAwesome-content-active' : 'timerAwesome-content-pres',
                        },
                    },
                },
                {
                    'side' : 'timerAwesome-item-back',
                    'data' : {
                        'data1' : {
                            'value' : options.next,
                            'rib'   : options.type == 'type1' ? 'timerAwesome-content-next timerAwesome-content-active' : 'timerAwesome-content-next',
                        },
                        'data2' : {
                            'value' : 0,
                            'rib'   : 'timerAwesome-content-none',
                        },
                        'data3' : {
                            'value' : options.next,
                            'rib'   : 'timerAwesome-content-next timerAwesome-content-active',
                        },
                        'data4' : {
                            'value' : 0,
                            'rib'   : 'timerAwesome-content-none',
                        },
                    },
                }
            ];
            if(options.type == 'type2') { config.pop(); }
            options.type = 'timerAwesome-'+options.type;
    .timerAwesome(class= options.id + ' ' + options.type)
        .timerAwesome-inner
            each set, index in config
                .timerAwesome-item(class= config[index].side)
                    .timerAwesome-top(style="transform: rotateX(0deg)")
                        .timerAwesome-content
                            .timerAwesome-content-front(class= config[index].data.data1.rib)
                                .timerAwesome-value= config[index].data.data1.value
                            .timerAwesome-content-back(class= config[index].data.data2.rib)
                                .timerAwesome-value= config[index].data.data2.value
                    .timerAwesome-sep
                    .timerAwesome-bottom(style="transform: rotateX(0deg)")
                        .timerAwesome-content
                            .timerAwesome-content-front(class= config[index].data.data3.rib)
                                .timerAwesome-value= config[index].data.data3.value
                            .timerAwesome-content-back(class= config[index].data.data4.rib)
                                .timerAwesome-value= config[index].data.data4.value
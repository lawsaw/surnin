mixin tabAwesome(options)
    -
        var newOptions = getOptions(options);
        newOptions.class = newOptions.class ? newOptions.class : '';
        newOptions.container = newOptions.container ? newOptions.container : '';
    .tabAwesome(class= newOptions.container + ' ' + newOptions.class)
        if block
            block

mixin tabAwesome-menu(options)
    -
        var newOptions = getOptions(options);
        newOptions.class = newOptions.class ? newOptions.class : '';
    .tabAwesome-menu(class= newOptions.class)
        if block
            block

mixin tabAwesome-content(options)
    -
        var newOptions = getOptions(options);
        newOptions.class = newOptions.class ? newOptions.class : '';
    .tabAwesome-content(class= newOptions.class)
        if block
            block

mixin tabAwesome-menu-item(options)
    -
        var newOptions = getOptions(options);
        newOptions.active       = newOptions.active == true ? 'tabAwesome-menu-item--active' : 'tabAwesome-menu-item--disable';
        newOptions.animOpen     = newOptions.animOpen       ? 'tabAwesome-anim-open-' + newOptions.animOpen : 'tabAwesome-anim-open-topToDown';
        newOptions.animClose    = newOptions.animClose      ? 'tabAwesome-anim-close-' + newOptions.animClose : 'tabAwesome-anim-close-topToDown';
        newOptions.class = newOptions.class ? newOptions.class : '';
    .tabAwesome-menu-item(
    class= newOptions.class + ' ' + newOptions.active + ' ' + newOptions.animOpen + ' ' + newOptions.animClose
    data-tabawesome-menu= newOptions.link
    )
        if block
            block

mixin tabAwesome-content-item(options)
    -
        var newOptions = getOptions(options);
        newOptions.active       = newOptions.active == true ? 'tabAwesome-content-item--active' : 'tabAwesome-content-item--disable';
        newOptions.animOpen     = newOptions.animOpen       ? 'tabAwesome-anim-open-' + newOptions.animOpen : 'tabAwesome-anim-open-topToDown';
        newOptions.animClose    = newOptions.animClose      ? 'tabAwesome-anim-close-' + newOptions.animClose : 'tabAwesome-anim-close-topToDown';
        newOptions.class = newOptions.class ? newOptions.class : '';
    .tabAwesome-content-item(
    class= newOptions.class + ' ' + newOptions.active + ' ' + newOptions.animOpen + ' ' + newOptions.animClose
    data-tabawesome-content= newOptions.link
    )
        if block
            block

mixin tabAwesome-dots(options)
    -
        var newOptions = getOptions(options);
    .tabAwesome-dots(
    class= newOptions.class
    data-parent-slider= newOptions.parentSlider
    )
        - for(var i=0; i<newOptions.items; i++) {
            .tabAwesome-dots-item(
            class= newOptions.classItem + ' ' + (newOptions.active - 1 == i ? newOptions.classActive : '')
            ) 1
        - }
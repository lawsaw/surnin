mixin tooltipAwesome(options)
    -
        var newOptions = getOptions(options),
        prefix = 'tooltipAwesome--';
        newOptions.pos = newOptions.pos.length > 1 ? prefix+newOptions.pos : prefix+'posTop';
        newOptions.mode = newOptions.mode.length > 1 ? prefix+newOptions.mode : prefix+'modeHover';
        newOptions.theme = newOptions.theme.length > 1 ? prefix+newOptions.theme : prefix+'themeGreen';
        newOptions.script = newOptions.script ? prefix+'script' : '';
        newOptions.titleClass = newOptions.titleClass ? newOptions.titleClass : [];
        newOptions.actived = newOptions.actived ? prefix+'active' : '';

    .tooltipAwesome(class= newOptions.actived+' '+newOptions.script+' '+newOptions.className)
        - if (newOptions.title) {
            .tooltipAwesome-title(class= setModifier({'prefix': 'tooltipAwesome-title--', 'values': newOptions.titleClass})) !{newOptions.title}
        -}
        .tooltipAwesome-win(class= newOptions.pos+' '+newOptions.mode+' '+newOptions.theme)
            .sectionInner
                if block
                    block
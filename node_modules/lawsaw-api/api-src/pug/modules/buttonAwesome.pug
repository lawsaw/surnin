mixin buttonAwesome(options)
    -
        var newOptions = getOptions(options),
        attributes = {};
        prefix = 'buttonAwesome--';



        if (newOptions.modal) {
            attributes['data-awesome-modal'] = newOptions.modal;
        }



    .buttonAwesome(class= prefix+newOptions.size+' '+prefix+newOptions.theme+' '+newOptions.className)
        a(
            href= newOptions.href
            class= newOptions.contentClassName
        )&attributes(attributes).buttonAwesome-content
            - if(newOptions.iconBefore) {
            .buttonAwesome-icon.buttonAwesome-icon--before(class= newOptions.iconBeforeClass)
                - switch(newOptions.iconBefore.type) {
                - case 'img':
                    img(src= newOptions.iconBefore.value)
                -    break;
                - case 'svg':
                    +svg({
                        'icon': newOptions.iconBefore.value
                    })
                -    break;
                - case 'fa':
                    i.fa(class= newOptions.iconBefore.value)
                -    break;
                - case 'block':
                    .buttonAwesome-icon-image(class= newOptions.iconBefore.value)
                -    break;
                -}
            -}
            if block
                .buttonAwesome-title(class= newOptions.classTitle)
                    .buttonAwesome-text(class= newOptions.classText)
                        block

            - if(newOptions.iconAfter) {
            .buttonAwesome-icon.buttonAwesome-icon--after(class= newOptions.iconAfterClass)
                - switch(newOptions.iconAfter.type) {
                - case 'img':
                    img(src= newOptions.iconAfter.value)
                -    break;
                - case 'svg':
                    +svg({
                        'icon': newOptions.iconAfter.value
                    })
                -    break;
                - case 'fa':
                    i.fa(class= newOptions.iconAfter.value)
                -    break;
                - case 'block':
                    .buttonAwesome-icon-image(class= newOptions.iconAfter.value)
                -    break;
                -}

            -}






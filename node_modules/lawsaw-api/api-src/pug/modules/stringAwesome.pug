mixin stringAwesome(options)
    -
        var newOptions = getOptions(options),
            prefixMain = 'stringAwesome--',
            prefixString = 'stringAwesome-string--';
    .stringAwesome(class= [newOptions.className, prefixMain + newOptions.mode])
        .stringAwesome-string(class= prefixString + newOptions.type)
            if block
                block
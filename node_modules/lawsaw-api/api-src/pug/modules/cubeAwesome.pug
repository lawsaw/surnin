mixin cubeAwesome(options)
    -
        var newOptions = getOptions(options);
        newOptions.class = newOptions.class ? newOptions.class : '';
    .cubeAwesome(class= newOptions.class)
        if block
            block


mixin cubeAwesome-face(options)
    -
        var newOptions = getOptions(options);
        newOptions.class = newOptions.class ? newOptions.class : '';
        newOptions.face = newOptions.face ? 'cubeAwesome-face--' + newOptions.face : 'noFace'
    .cubeAwesome-face(class= newOptions.class + ' ' + newOptions.face)
        .cubeAwesome-face-front
            .cubeAwesome-face-front-content
                if block
                    block

//-+cubeAwesome
    +cubeAwesome-face({'face': 'front'}) front
    +cubeAwesome-face({'face': 'back'}) back
    +cubeAwesome-face({'face': 'top'}) top
    +cubeAwesome-face({'face': 'bottom'}) bottom
    +cubeAwesome-face({'face': 'left'}) left
    +cubeAwesome-face({'face': 'right'}) right